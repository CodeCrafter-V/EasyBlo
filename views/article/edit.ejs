<div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title text-center">Create a New Blog Post</h2>
            <a type="submit" class="btn btn-primary btn-block my-2" href="/">Home</a>
            <form action="/article/edit/<%= article.id %>" method="post">
              <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" name="title" id="title" placeholder="Enter title" value= <%= article.title %> >
              </div>
              <div class="form-group">
                <label for="post">Your Post</label>
                <textarea class="form-control" name="des" id="post" rows="6" placeholder="Write your post here"> <%= article.des %> </textarea>
              </div>
              <div class="form-group">
                <label for="moreInfo">More Info</label>
                <textarea name="info" class="form-control" id="moreInfo" placeholder="Enter additional information"> <%= article.info %> </textarea>
              </div>
              <!-- <a type="submit" class="btn btn-primary btn-block my-2" href="/">Home</a> -->
              <button type="submit" class="btn btn-success btn-block my-2 mx-3">Update</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  
  